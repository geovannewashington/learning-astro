<!-- Social.astro -->
--- 
interface Props {
    platform: string,
    username: string
}

const { platform, username }: Props = Astro.props;
---
<style>
    a {
        padding: 0.5rem 1rem;
        color: white;
        background-color: #4c1d95;
        text-decoration: none;
    }
</style>

<a href={`https://www.${platform}.com/${username}`} target="_blank">{platform}</a>




